<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43858D"

    android:gravity="center_horizontal">


    <LinearLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/login" />

    </LinearLayout>


    <EditText
        android:id="@+id/server_ip_input"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/logo_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/computer"
        android:hint="Server IP"
        android:inputType="text"
        android:padding="7dp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/port_input"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/server_ip_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/port"
        android:hint="Port"
        android:inputType="text"
        android:padding="7dp"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/port_input"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:drawableRight="@drawable/name"
        android:hint="Name"
        android:inputType="text"
        android:padding="7dp"
        android:textSize="20dp"
        android:visibility="visible" />


    <LinearLayout
        android:id="@+id/role_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/speaker"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/rectangle1"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Speaker"
            android:textColor="#ACACAD"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:id="@+id/audience"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="Audience"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/connect_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/role_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="#DEA60A"
        android:padding="5dp"
        android:text="CONNECT"
        android:textColor="#ffffff"
        android:textSize="30dp" />

</RelativeLayout>